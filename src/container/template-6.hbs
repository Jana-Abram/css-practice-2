   <header class="header row g-0">
        <div class="col-3">
            {{>logo}}
        </div>
              
        <nav class="header_nav col-9">
                <div class="header_nav_right">
                   {{> nav list=header}}
                </div>
            </nav>
        </header>

        <div class="info">
     <div class="info_text">
        <h2 class="info_title">{{info.title}}</h2>
        <p class="info_description">{{info.description}}</p>
     </div>

    <div class="info_form">
        {{#with form}}
           <form class="form">
              <h2 class="form_title">{{title}}</h2>
                <div class="form_input_list">
                 {{#each inputs}}
                    <input type='{{type}}' placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form-input-{{id}}">
                 {{/each}}
                </div>

              <div class="form_checkbox">
                 <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
                 <div></div>
                 <label for="{{checkbox.name}}">{{checkbox.label}}</label>
              </div>
                <button type="submit" class="form_button">{{button}}</button>
                <div class="line"></div>
                <h2 class="form_info">{{info}}</h2>
           </form>
        {{/with}}
        </div>
    </div>

     <div class="updates">
         <h2>{{updates.title}}</h2>
            <div class="updates-content">
         {{#each updates.list}}
            <div class="update">
               <div class="user-info">
               <div class="user-photo">
               <img src="https://picsum.photos/64/64" alt="{{nickname}} Photo">
            </div>
            <div class="user-details">
               <h3>{{nickname}}</h3>
               <p>{{description}}</p>
               </div>
               </div>
               </div>
         {{/each}}
               </div>
                 <a href="{{updates.show_all.url}}">{{updates.show_all.text}}</a>
               </div>

        <div class="expirience">
               <h2>{{expirience.title}}</h2>
               <div class="card-container">
             {{#each expirience.list}}
                 <div class="card">
                    <h3>{{name}}</h3>
                    <p>{{details}}</p>
                 </div>
             {{/each}}
        </div>
             <div class="hot_badge">
                <button class="hot_button">
                   <span>Hot!</span>
                </button>
           </div>
        </div>

        <footer class="footer">
           <div>
              {{>logo}}
              <span class="footer_copyright">Copyright 2023</span>
           </div>

           {{#each footer}}
           <div>
                <span class="footer_title">{{title}}</span>
                 {{> nav list=links isVertical=true}}
           </div>
           {{/each}}
        </footer>
      